# Copy this file to .env and fill in values for local development.
# Never commit .env to version control.

# ---- Backend ----

# PostgreSQL connection string (local: change host/db as needed)
DATABASE_URL=postgresql://localhost:5432/youthvoting

# Census API key — get one free at https://api.census.gov/data/key_signup.html
CENSUS_API_KEY=your_census_api_key_here

# Comma-separated list of allowed CORS origins
ALLOWED_ORIGINS=http://localhost:3000

# Random secret key for signing tokens (generate with: openssl rand -hex 32)
SECRET_KEY=change-me-in-production

# ---- Frontend ----

# URL of the running FastAPI backend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Mapbox GL JS public token — get one at https://account.mapbox.com/access-tokens/
NEXT_PUBLIC_MAPBOX_TOKEN=pk.your_mapbox_token_here
